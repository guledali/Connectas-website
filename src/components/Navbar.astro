---
type NavLink = {
  href: string;
  text: string;
};

const navLinks: NavLink[] = [
  { href: "/", text: "Hem" },
  { href: "/services", text: "Våra tjänster" },
  { href: "/about", text: "Om oss" },
  { href: "/contact-us", text: "Kontakta oss" },
];
---

<nav class="navbar navbar-expand-lg bg-transparent-custom">
  <div class="container-fluid">
    <div class="bg-light ms-5 rounded p-2">
      <span class="navbar-brand fw-bold h1">Connectas AB</span>
    </div>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        {
          navLinks.map((link) => (
            <li class="nav-item p-4 ">
              <a class="nav-link fw-bold" href={link.href}>
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>

<style>
  .bg-transparent-custom {
    background-color: transparent;
  }

  .nav-item .nav-link {
    color: #c4e0df !important; /* Sets the color to a slightly light green */
  }

  .navbar-brand {
    font-size: 28px;
    color: #007477;
  }
</style>
